/* app.wxss */
.placeholder {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  font-size: 18px;
  color: #999;
}

.devices_summary {
  margin: 10px 0;
  font-size: 16px;
  color: #333;
}

.device_list {
  max-height: 300px;
  border: 1px solid #ddd;
  padding: 10px;
}

.device_item {
  padding: 10px;
  border-bottom: 1px solid #ddd;
}

.device_item_hover {
  background-color: #f0f0f0;
}

.connected_info {
  padding: 20px;
  border: 1px solid #ddd;
  margin-top: 20px;
}

.operation {
  margin-top: 10px;
}